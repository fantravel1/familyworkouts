---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/global/Header.astro';
import Footer from '../../components/global/Footer.astro';
import MobileNav from '../../components/global/MobileNav.astro';
import BreadcrumbSchema from '../../components/seo/BreadcrumbSchema.astro';

import ageGroups from '../../data/age-groups.json';

const breadcrumbs = [
  { name: "Home", href: "/" },
  { name: "By Age", href: "/ages/" }
];

const pageTitle = "Family Workouts by Age | Toddlers to Seniors | FamilyWorkouts";
const pageDescription = "Find the perfect workout for every family member. Age-appropriate exercises from toddlers (1-3) to seniors (60+). Free videos with modifications for all ability levels.";
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
>
  <Header slot="header" currentPath="/ages/" />

  <div class="section-container">
    <BreadcrumbSchema items={breadcrumbs} />
  </div>

  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-ocean/10 via-purple/5 to-coral/10 py-12 lg:py-16">
    <div class="section-container">
      <div class="max-w-3xl">
        <h1 class="text-3xl lg:text-4xl font-bold text-navy mb-4">
          Workouts by Age Group
        </h1>
        <p class="text-lg text-soft-gray mb-4">
          Every family member deserves exercises designed for their stage of life. Find age-appropriate workouts that everyone can enjoy together.
        </p>
      </div>
    </div>
  </section>

  <!-- Age Groups Grid -->
  <section class="py-12 lg:py-16">
    <div class="section-container">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {ageGroups.map((age) => (
          <a
            href={`/ages/${age.slug}/`}
            class="group card p-6 hover:border-ocean border-2 border-transparent transition-all"
          >
            <div class="text-5xl mb-4">{age.icon}</div>
            <h2 class="text-xl font-bold text-navy mb-1 group-hover:text-coral transition-colors">
              {age.name}
            </h2>
            <p class="text-coral font-medium mb-3">{age.ageRange}</p>
            <p class="text-soft-gray text-sm mb-4">{age.description}</p>

            <div class="bg-ocean/10 rounded-lg p-3 mb-4">
              <p class="text-xs text-ocean font-medium">
                Recommended: {age.activityTarget}
              </p>
            </div>

            <div class="flex items-center text-coral font-medium">
              <span>View Workouts</span>
              <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
              </svg>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Tips Section -->
  <section class="py-12 lg:py-16 bg-cloud">
    <div class="section-container">
      <h2 class="text-2xl font-bold text-navy mb-8 text-center">
        Tips for Multi-Generational Workouts
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto">
        <div class="bg-white p-6 rounded-xl">
          <div class="text-3xl mb-3">üéØ</div>
          <h3 class="font-bold text-navy mb-2">Start Together</h3>
          <p class="text-soft-gray text-sm">
            Begin with activities everyone can do, then let family members branch off to age-appropriate challenges.
          </p>
        </div>
        <div class="bg-white p-6 rounded-xl">
          <div class="text-3xl mb-3">‚è±Ô∏è</div>
          <h3 class="font-bold text-navy mb-2">Match the Youngest</h3>
          <p class="text-soft-gray text-sm">
            Duration should match your youngest participant's attention span. Older family members can always do more later!
          </p>
        </div>
        <div class="bg-white p-6 rounded-xl">
          <div class="text-3xl mb-3">ü™ë</div>
          <h3 class="font-bold text-navy mb-2">Offer Modifications</h3>
          <p class="text-soft-gray text-sm">
            Every workout should have seated options for grandparents and simplified moves for little ones.
          </p>
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
  <MobileNav slot="mobile-nav" currentPath="/ages/" />
</BaseLayout>
