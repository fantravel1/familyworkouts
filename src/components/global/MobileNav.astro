---
interface Props {
  currentPath?: string;
}

const { currentPath = '/' } = Astro.props;

const navItems = [
  { name: 'Home', href: '/', icon: 'home' },
  { name: 'Workouts', href: '/workouts/', icon: 'workout' },
  { name: 'Play', href: '/#press-play', icon: 'play' },
  { name: 'Ages', href: '/ages/', icon: 'ages' },
  { name: 'More', href: '/challenges/', icon: 'more' },
];

const isActive = (href: string) => {
  if (href === '/') return currentPath === '/';
  if (href === '/#press-play') return false;
  return currentPath.startsWith(href);
};
---

<nav class="mobile-nav lg:hidden no-print" aria-label="Mobile navigation">
  {navItems.map((item) => (
    <a
      href={item.href}
      class:list={[
        item.icon === 'play' ? 'mobile-nav-play' : 'mobile-nav-item',
        item.icon !== 'play' && isActive(item.href) && 'active'
      ]}
      aria-current={isActive(item.href) ? 'page' : undefined}
      aria-label={item.icon === 'play' ? 'Press Play â€” instant workout' : undefined}
    >
      {item.icon === 'play' ? (
        <Fragment>
          <div class="mobile-nav-play-btn">
            <svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M8 5v14l11-7z"/>
            </svg>
          </div>
          <span class="text-xs font-bold text-coral mt-5">{item.name}</span>
        </Fragment>
      ) : item.icon === 'home' ? (
        <Fragment>
          <svg class="w-6 h-6 mb-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width={isActive(item.href) ? 2.5 : 2}>
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
          <span class="text-xs font-medium">{item.name}</span>
        </Fragment>
      ) : item.icon === 'workout' ? (
        <Fragment>
          <svg class="w-6 h-6 mb-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width={isActive(item.href) ? 2.5 : 2}>
            <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
          <span class="text-xs font-medium">{item.name}</span>
        </Fragment>
      ) : item.icon === 'ages' ? (
        <Fragment>
          <svg class="w-6 h-6 mb-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width={isActive(item.href) ? 2.5 : 2}>
            <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
          <span class="text-xs font-medium">{item.name}</span>
        </Fragment>
      ) : (
        <Fragment>
          <svg class="w-6 h-6 mb-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width={isActive(item.href) ? 2.5 : 2}>
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <span class="text-xs font-medium">{item.name}</span>
        </Fragment>
      )}
    </a>
  ))}
</nav>
